extends layout

block main
  form(action="/users/signin" method="post")
    dl
      dt
        label(for="username") Username:
      dd
        input(type="text"
              id="username"
              name="username"
              placeholder="username"
              value=username)
      dt
        label(for="password") Password:
      dd
        input(type="text"
              id="password"
              name="password"
              placeholder="password"
              value=password)

    fieldset.actions
      input(type="submit" value="Sign In")
      a(href="/lists") Cancel